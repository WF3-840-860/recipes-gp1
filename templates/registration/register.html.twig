{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}

    <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header">
                            <h3 class="text-center font-weight-light my-4">Première visite ?</h3>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="form-row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                       {{ form_row(registrationForm.firstname, {
            label: 'Prénom'
        }) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                           {{ form_row(registrationForm.lastname, {
            label: 'Nom'
        }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_row(registrationForm.email) }}
                                </div>
                                <div class="form-row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
                                        </div>
                                    </div>
                                    
                                </div>
                                <div>{{ form_row(registrationForm.agreeTerms) }}</div>
                                <div class="form-group mt-4 mb-0"><button class="btn btn-primary btn-block" type="submit" >Créer mon compte</button></div>
                            </form>
                        </div>
                        <div class="card-footer text-center">
                            <div class="small"><a href="{{ path('app_login') }}">Vous avez un compte? Se connecter</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>{{ form_end(registrationForm) }}
{% endblock %}
